<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SessionActivity">


        <TextView
            android:id="@+id/HeightStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/SpeedStop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="20sp" />


    <TextView
        android:id="@+id/txtHeight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="21 m"
        android:textSize="36sp"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HEIGHT"
            android:textSize="20sp"
            android:layout_below="@+id/txtHeight"
            android:layout_alignLeft="@+id/txtHeight"
            android:layout_alignRight="@+id/txtHeight"
            />

    <TextView
        android:id="@+id/txtSpeed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:textSize="36sp"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/txtHeight"
        android:text="1:12/m"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPEED"
        android:textSize="20sp"
        android:layout_alignLeft="@+id/txtSpeed"
        android:layout_alignRight="@+id/txtSpeed"
        android:layout_below="@+id/txtSpeed"
        android:gravity="center"
        />


    <View
        android:id="@+id/anchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/anchor"
        android:layout_centerHorizontal="true"
        android:text="@string/timer"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="65sp" />

    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/timer"
        android:layout_marginTop="50dp"
        android:background="#000000" />


    <ImageButton
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/line"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:src="@drawable/start" />

    <TextView
        android:id="@+id/txtStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnStart"
        android:layout_alignRight="@+id/btnStart"
        android:layout_below="@+id/btnStart"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Start"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/btnStart"
        android:layout_gravity="center"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/reset"
        android:text="@string/resetText"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/txtReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnReset"
        android:layout_alignRight="@+id/btnReset"
        android:layout_below="@+id/btnReset"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Reset"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/btnPauze"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/line"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/pauze"
        android:textColor="@color/black"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txtPauze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnReset"
        android:layout_alignRight="@+id/btnReset"
        android:layout_below="@+id/btnPauze"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Pauze"
        android:textSize="30sp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/line"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/stop"
        android:textColor="@color/black"
        android:visibility="gone" />

    <TextView
        android:id="@+id/txtStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnStop"
        android:layout_alignRight="@+id/btnStop"
        android:layout_below="@+id/btnStop"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Stop"
        android:textSize="30sp"
        android:visibility="gone" />


</RelativeLayout>
