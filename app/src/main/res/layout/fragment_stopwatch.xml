<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SessionActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:visibility="gone"
        android:layout_above="@+id/timer"
        android:textSize="20sp"/>

    <View
        android:id="@+id/anchor"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/timer"
        android:text="@string/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="65sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/anchor"/>

    <View android:layout_width="fill_parent"
        android:id="@+id/line"
        android:layout_below="@+id/timer"
        android:layout_marginTop="50dp"
        android:layout_height="2dp"
        android:background="#000000" />


    <ImageButton
        android:id="@+id/btnStart"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@null"
        android:src="@drawable/start"
        android:scaleType="fitCenter"
        android:gravity="center"
        android:layout_below="@+id/line"
        android:layout_marginTop="40dp"/>

    <TextView
        android:id="@+id/txtStart"
        android:text="Start"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnStart"
        android:layout_alignRight="@+id/btnStart"
        android:layout_below="@+id/btnStart"
        />

    <ImageButton
        android:id="@+id/btnReset"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@null"
        android:scaleType="fitCenter"
        android:text="@string/resetText"
        android:src="@drawable/reset"
        android:textColor="@color/black"
        android:layout_alignTop="@+id/btnStart"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:id="@+id/txtReset"
        android:text="Reset"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnReset"
        android:layout_alignRight="@+id/btnReset"
        android:layout_below="@+id/btnReset"
        />

    <ImageButton
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:background="@null"
        android:textColor="@color/black"
        android:src="@drawable/stop"
        android:scaleType="fitCenter"
        android:visibility="gone"
        android:layout_below="@+id/line"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/txtStop"
        android:text="Stop"
        android:textSize="30sp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_alignLeft="@+id/btnStop"
        android:layout_alignRight="@+id/btnStop"
        android:layout_below="@+id/btnStop"
        />


</RelativeLayout>
