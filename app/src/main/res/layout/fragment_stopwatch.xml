<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".SessionActivity">

    <!-- The paddingbottom is used to compensate the textsize! -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/timer"
        android:id="@+id/timer"
        android:textSize="60sp"
        android:paddingBottom="60dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <View android:layout_width="fill_parent"
        android:layout_below="@+id/timer"
        android:layout_height="2dp"
        android:layout_marginTop="50dp"
        android:background="#000000" />

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="@string/stopText"
        android:background="@color/defaultB"
        android:textColor="@color/black"
        android:drawableTop="@drawable/end"
        android:gravity="top|center_horizontal"
        android:id="@+id/stopButton"
        android:visibility="gone"
        android:layout_below="@+id/timer"
        android:layout_marginTop="100dp"
        >
    </Button>

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="@string/startText"
        android:id="@+id/btnStart"
        android:background="@color/defaultB"
        android:textColor="@color/black"
        android:drawableTop="@drawable/play"
        android:gravity="top|center_horizontal"
        android:layout_below="@+id/timer"
        android:layout_marginTop="100dp"
        >
    </Button>
    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="@string/resetText"
        android:id="@+id/btnReset"
        android:background="@color/defaultB"
        android:drawableTop="@drawable/clock"
        android:textColor="@color/black"
        android:gravity="top|center_horizontal"
        android:layout_alignTop="@+id/btnStart"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">
    </Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="160dp"
        android:visibility="gone"
        android:layout_above="@+id/timer"
        android:textSize="20sp"/>

</RelativeLayout>
